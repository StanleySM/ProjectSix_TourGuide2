<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/MainLayout">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        style="@style/CardView"
        android:layout_width="match_parent"
        android:layout_height="130dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:gravity="center">

            <ImageView
                android:id="@+id/main_image"
                style="@style/MainImage"
                android:src="@drawable/hotel_image_1" />

            <LinearLayout
                android:id="@+id/information_box"
                style="@style/information_box"
                android:layout_toEndOf="@+id/main_image"
                android:layout_toRightOf="@+id/main_image">

                <TextView
                    android:id="@+id/header"
                    style="@style/header"
                    android:text="@string/hotel_name_1" />

                <LinearLayout style="@style/first_line">

                    <ImageView
                        android:id="@+id/firstSymbol"
                        style="@style/first_symbol"
                        android:src="@drawable/ic_access_time_black_24dp" />

                    <TextView
                        android:id="@+id/first_line_text"
                        style="@style/first_line_text"
                        android:text="@string/hotel_score_1"
                        android:textAppearance="?android:textAppearanceSmall" />
                </LinearLayout>

                <LinearLayout style="@style/first_line">

                    <ImageView
                        style="@style/first_symbol"
                        android:src="@drawable/ic_euro_symbol_black_24dp" />

                    <TextView
                        android:id="@+id/second_line_text"
                        style="@style/first_line_text"
                        android:text="@string/hotel_entry_1"
                        android:textAppearance="?android:textAppearanceSmall" />
                </LinearLayout>

                <TextView
                    android:id="@+id/main_information_text"
                    style="@style/main_information_text"
                    android:text="@string/hotel_entry_1" />


            </LinearLayout>


        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>